<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToggleButton?>
<VBox prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SimulationPageController">
  <children>
      <HBox prefWidth="200.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="15.0" HBox.hgrow="ALWAYS">
               <children>
                   <ToggleButton fx:id="btnBack" stylesheets="@../StyleSheets/ToggleButtonBack.css" onAction="#btnBackPressed"></ToggleButton>
                   <ToggleButton fx:id="btnRetry" stylesheets="@../StyleSheets/ToggleButtonRefresh.css" onAction="#btnRetryPressed"></ToggleButton>
               </children>
               <HBox.margin>
                  <Insets left="5.0"/>
               </HBox.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="15.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnRunCode" mnemonicParsing="false" onAction="#btnRunCodePressed" prefHeight="50.0" prefWidth="150.0" text="RUN CODE">
                     <HBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </HBox.margin></Button>
                  <Button fx:id="btnExit" mnemonicParsing="false" onAction="#btnExitPressed" prefHeight="50.0" prefWidth="150.0" text="EXIT SIMULATION">
                     <HBox.margin>
                        <Insets bottom="15.0" right="15.0" top="15.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
      </HBox>
      <SplitPane fx:id="splitPaneContent" dividerPositions="0.75" prefHeight="700.0">
         <items>
            <AnchorPane maxWidth="1024.0" minHeight="0.0" minWidth="1024.0" prefWidth="1024.0" SplitPane.resizableWithParent="false">
               <children>
                  <SplitPane dividerPositions="0.25" orientation="VERTICAL" prefHeight="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <items>
                        <ScrollPane prefHeight="200.0" prefWidth="200.0">
                           <content>
                              <VBox fx:id="vBoxHtml" fillWidth="false" minWidth="-Infinity" onDragDropped="#vBoxHtmlDragDrop" onDragOver="#vBoxHtmlDragOver" />
                           </content>
                        </ScrollPane>
                        <ScrollPane prefHeight="200.0" prefWidth="200.0">
                           <content>
                              <VBox fx:id="vBoxPython"/>
                           </content>
                        </ScrollPane>
                     </items>
                  </SplitPane>
               </children>
            </AnchorPane>
            <ScrollPane fitToWidth="true" prefHeight="1080.0" SplitPane.resizableWithParent="false">
               <content>
                  <VBox fx:id="vBoxAnswerContainer" alignment="CENTER" prefWidth="300.0" spacing="25.0">
                     <children></children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ScrollPane>
         </items>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </SplitPane>
  </children>
</VBox>
